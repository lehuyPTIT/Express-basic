extends ../layouts/common.pug

block content
	h1 Login
	if errors
		each error in errors
			.alert.alert-danger=error
	form(action="/auth/login",method="POST")
		.form-group
			label(for='email') Email
			input#email.form-control(type="text",name="email" value=value?value.email :'')
		.form-group
			label(for='password') password
			input#password.form-control(type="password",name="password" value=value?value.password :'')
		button.btn.btn-primary Login