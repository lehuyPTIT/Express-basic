extends ../layouts/common.pug

block content
	h1
		span.mr-5 Users
		a.btn.btn-primary(href='/users/create') New

	.d-flex.align-items-center
		form.ml-auto(action="/users/search",method="GET" class="d-flex")
			input(type="text",name="q" value=value class="form-control")
			button(class="btn btn-primary ml-2") search
	table.table
		tr
			th Avatar
			th Name
			th Phone
			th Action

		each user in users
			tr
				td
					img(src=user.avatar,width='128')
				td=user.name
				td=user.phone
				td
					a.btn-light(href='/users/'+ user.id ) View